<%#
  Partial used for rendering checkboxes of either reported_project_statuses or
  planning_element_types of ProjectTypes

  required locals:
    model          => ProjectType instance
    attribute_name => :reported_project_status_ids/:planning_element_type_ids
    active_list    => list of active related models
    available_list => list of all available related models
%>

<% available_list.each do |association_instance| %>
  <label for=<%= "project_type_#{attribute_name}_#{association_instance.id}" %>
         class="floating">
    <%= check_box_tag "project_type[#{attribute_name}][]",
                      association_instance.id,
                      active_list.include?(association_instance),
                      :id => "project_type_#{attribute_name}_#{association_instance.id}" %>
    <%=h association_instance.name %>
  </label>
<% end %>
