<%= header_tags %>

<%= form_for :color,
            :url  => color_url(@color),
            :html => {:method => 'delete'} do |f| %>

  <div class='flash warning'>
    <%= l('timelines.really_delete_color') %>
  </div>

  <h2>
    <%=h @color.name %>
  </h2>

  <fieldset class="timelines-color-properties">
    <legend><%= l('timelines.properties') %></legend>

    <p>
      <label for="color_hexcode">
        <%= PlanningElementTypeColor.human_attribute_name(:hexcode) %>
      </label>
      <%= icon_for_color(@color) %>
      <%= f.text_field :hexcode, :disabled => 'disabled' %>
    </p>
  </fieldset>

  <%= submit_tag l(:button_delete) %>
  <%= link_to l(:button_cancel), colors_path %>
<% end %>
